{
  "name": "vibelife",
  "version": "0.1.0",
  "description": "An evolutionary life simulator",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "dev": "yarn build:wasm && webpack serve --mode development",
    "build": "yarn build:wasm && webpack --mode production",
    "build:wasm": "cd src/simulation/rust && wasm-pack build --target web --out-dir pkg",
    "build:wasm:release": "cd src/simulation/rust && wasm-pack build --target web --out-dir pkg --release",
    "test": "jest"
  },
  "keywords": [
    "evolution",
    "simulation",
    "game",
    "webgl"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.160.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/three": "^0.160.0",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.4",
    "jest": "^29.7.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
